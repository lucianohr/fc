<header class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to(content_for?(:title) ? yield(:title) : "Fluxo de Caixa", root_path, class: 'navbar-brand') %>
    </div>
    <div class="navbar-collapse collapse navbar-responsive-collapse">
      <ul class="nav navbar-nav navbar-right">
        <% if usuario_signed_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_usuario.nome %> <b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li><%= link_to(t('devise.registrations.edit.name'), edit_usuario_registration_path) %></li>
                  <li><%= link_to(t('devise.sessions.destroy.name'), destroy_usuario_session_path, method: :delete) %>
                </ul>
            </li>
          <% else %>
              <li><%= link_to(t('devise.sessions.new.name'), new_usuario_session_path) %></li>
              <li><%= link_to(t('devise.registrations.new.name'), new_usuario_registration_path) %></li>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</header>