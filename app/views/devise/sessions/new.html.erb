<h2><%= t('.title') %></h2>

<%= semantic_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= f.inputs class: 'form-inputs' do %>
    <%= f.input :email, required: false, autofocus: true %>
    <%= f.input :password, required: false %>
    <%= f.input :remember_me, as: :boolean, label: false if devise_mapping.rememberable? %>
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit, :label => t('.submit'), :as => :button, :button_html => { :class => 'btn btn-primary' } %>
  <% end %>
<% end %>

<%= render "devise/shared/links" %>
