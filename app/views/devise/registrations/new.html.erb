<h2><%= t('.title') %></h2>

<%= semantic_form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'form-horizontal', :'data-parsley-validate' => true}) do |f| %>

  <%= f.inputs class: 'form-inputs' do %>
    <%= f.input :nome, autofocus: true, input_html: { required: true } %>
    <%= f.input :email, input_html: { required: true } %>
    <%= f.input :password, :input_html => {required: true, :'data-parsley-length' => "[#{Devise.password_length.min},#{Devise.password_length.max}]"} %>
    <%= f.input :password_confirmation, input_html: { required: true, :'data-parsley-equalto' => "##{resource_name}_password" } %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :label => t('.submit'), :as => :button, :button_html => { :class => 'btn btn-primary' } %>
  <% end %>
<% end %>

<%= render "devise/shared/links" %>
