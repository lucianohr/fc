<h2><%= t('.title') %></h2>

<%= semantic_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, :'data-parsley-validate' => true }) do |f| %>

  <%= f.inputs class: 'form-inputs' do %>
    <%= f.input :nome, autofocus: true, input_html: { required: true } %>
    <%= f.input :email, input_html: { required: true } %>
    <%= f.input :current_password, hint: t('.current_password_hint'), input_html: { required: true } %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, autocomplete: "off", hint: t('.password_hint'), required: false %>
    <%= f.input :password_confirmation, required: false %>
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit, label: t('.submit'), as: :button, button_html: { :class => 'btn btn-primary' } %>
  <% end %>
<% end %>

<p><%#= link_to t('.cancel_text'), registration_path(resource_name), data: { :confirm => t('action.item.confirm_deletion') }, method: :delete %></p>
